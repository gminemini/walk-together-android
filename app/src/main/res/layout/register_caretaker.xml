<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.custu.project.walktogether.TopicsOneActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_0dp"
        android:layout_margin="8dp"
        android:layout_weight="9"
        android:background="@drawable/shape_mainbox"
        android:elevation="20dp"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="12dp"

                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ชื่อผู้ใช้"
                        android:textColor="@color/colorBackground"
                        android:textSize="@dimen/TextSizeBold_20sp" />

                    <EditText
                        android:id="@+id/input_username"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/shape_input_regis"
                        android:inputType="text"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:textSize="@dimen/TextSizeBold_20sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="12dp"

                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="รหัสผ่าน"
                        android:textColor="@color/colorBackground"
                        android:textSize="@dimen/TextSizeBold_20sp" />

                    <EditText
                        android:id="@+id/input_password"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/shape_input_regis"
                        android:inputType="textPassword"
                        android:maxLines="1"
                        android:singleLine="true"

                        android:textSize="@dimen/TextSizeBold_20sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="12dp"

                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ยืนยันรหัสผ่าน"
                        android:textColor="@color/colorBackground"
                        android:textSize="@dimen/TextSizeBold_20sp" />

                    <EditText
                        android:id="@+id/input_confirm_pass"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/shape_input_regis"
                        android:inputType="textPassword"
                        android:maxLines="1"
                        android:singleLine="true"

                        android:textSize="@dimen/TextSizeBold_20sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="12dp"

                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="คำนำหน้าชื่อ"
                        android:textColor="@color/colorBackground"
                        android:textSize="@dimen/TextSizeBold_20sp" />

                    <EditText
                        android:id="@+id/input_titlename"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/shape_input_regis"
                        android:inputType="text"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:textSize="@dimen/TextSizeBold_20sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="12dp"

                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ชื่อ"
                        android:textColor="@color/colorBackground"
                        android:textSize="@dimen/TextSizeBold_20sp" />

                    <EditText
                        android:id="@+id/input_firstname"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/shape_input_regis"
                        android:inputType="text"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:textSize="@dimen/TextSizeBold_20sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="12dp"

                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="นามสกุล"
                        android:textColor="@color/colorBackground"
                        android:textSize="@dimen/TextSizeBold_20sp" />

                    <EditText
                        android:id="@+id/input_lastname"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/shape_input_regis"
                        android:inputType="text"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:textSize="@dimen/TextSizeBold_20sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="วัน/เดิอน/ปี ที่เกิด"
                            android:textColor="@color/colorBackground"
                            android:textSize="@dimen/TextSizeBold_20sp" />

                        <EditText
                            android:id="@+id/input_dob"
                            android:layout_width="1dp"
                            android:layout_height="1dp"
                            android:focusable="false" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <Spinner
                            android:id="@+id/day"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/height_edittext_40dp"
                            android:layout_weight="3" />

                        <Spinner
                            android:id="@+id/month"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/height_edittext_40dp"
                            android:layout_weight="5" />

                        <Spinner
                            android:id="@+id/year"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/height_edittext_40dp"
                            android:layout_weight="5" />
                    </LinearLayout>


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@drawable/shape_input_regis" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="12dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="เพศ"
                        android:textColor="@color/colorBackground"
                        android:textSize="@dimen/TextSizeBold_20sp" />

                    <Spinner
                        android:id="@+id/input_sex"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_edittext_40dp"
                        android:background="@drawable/shape_input_regis"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:spinnerMode="dialog">

                    </Spinner>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="12dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ระดับการศึกษา"
                        android:textColor="@color/colorBackground"
                        android:textSize="@dimen/TextSizeBold_20sp" />

                    <Spinner
                        android:id="@+id/input_education"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_edittext_40dp"
                        android:background="@drawable/shape_input_regis"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:spinnerMode="dialog">

                    </Spinner>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="12dp"

                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="เบอร์โทร"
                        android:textColor="@color/colorBackground"
                        android:textSize="@dimen/TextSizeBold_20sp" />

                    <EditText
                        android:id="@+id/input_tell"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/shape_input_regis"
                        android:inputType="phone"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:textSize="@dimen/TextSizeBold_20sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="12dp"

                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="อาชีพ"
                        android:textColor="@color/colorBackground"
                        android:textSize="@dimen/TextSizeBold_20sp" />

                    <EditText
                        android:id="@+id/input_occupation"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_edittext_40dp"
                        android:background="@drawable/shape_input_regis"
                        android:maxLines="1"
                        android:singleLine="true">

                    </EditText>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="12dp"

                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="อีเมล"
                        android:textColor="@color/colorBackground"
                        android:textSize="@dimen/TextSizeBold_20sp" />

                    <EditText
                        android:id="@+id/input_email"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/shape_input_regis"
                        android:inputType="textEmailAddress"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:textSize="@dimen/TextSizeBold_20sp" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_0dp"
        android:layout_weight="1.5"
        android:orientation="vertical"
        android:paddingLeft="12dp"
        android:paddingRight="12dp">

        <Button
            android:id="@+id/next"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@drawable/shapetopics"
            android:text="ตกลง"
            android:textColor="@color/colorOffwhite"
            android:textSize="@dimen/TextSize"
            android:visibility="gone" />

        <br.com.simplepass.loading_button_lib.customViews.CircularProgressButton
            android:id="@+id/register_button"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_gravity="center_horizontal"
            android:text="ตกลง"
            android:textColor="@color/colorOffwhite"
            android:textSize="@dimen/TextSize"
            app:finalCornerAngle="48dp"
            app:spinning_bar_color="@color/colorOffwhite"
            app:spinning_bar_padding="6dp"
            app:spinning_bar_width="4dp" />
    </LinearLayout>
</LinearLayout>
