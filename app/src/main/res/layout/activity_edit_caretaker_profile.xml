<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="15pt"
    android:background="@drawable/shape_mainbox"
    android:elevation="2dp"
    android:orientation="vertical"
    tools:context="com.custu.project.walktogether.EditCaretakerProfileActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/image_profile"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="15pt"
                    android:src="@drawable/avatar" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:scaleType="centerCrop"
                    android:id="@+id/change_image_profile"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="15pt"
                    android:src="@drawable/edit_image_profile" />


            </RelativeLayout>


            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/marginTop"
                android:text="นายปัณวรรธน์ นกเกตุ"
                android:textColor="@color/colorDetailProfile"
                android:textSize="@dimen/TextSize_Spinner"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="12pt">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/marginTop"
                    android:layout_marginTop="@dimen/marginTop"
                    android:text="เพศ:"
                    android:textColor="@color/colorBackground"
                    android:textSize="@dimen/TextSize_Spinner"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/sex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/marginTop"
                    android:text="หญิง"
                    android:textColor="@color/colorDetailProfile"
                    android:textSize="@dimen/TextSize_Spinner" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="12pt"
                android:layout_marginTop="@dimen/marginTopProfile">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/marginTop"
                    android:text="อายุ:"
                    android:textColor="@color/colorBackground"
                    android:textSize="@dimen/TextSize_Spinner"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/age"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/marginTop"
                    android:layout_marginRight="@dimen/marginTop"
                    android:text="21"
                    android:textColor="@color/colorDetailProfile"
                    android:textSize="@dimen/TextSize_Spinner" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ปี"
                    android:textColor="@color/colorBackground"
                    android:textSize="@dimen/TextSize_Spinner"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="12pt"
                android:layout_marginTop="@dimen/marginTopProfile">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/marginTop"
                    android:text="เบอร์โทรศัพท์:"
                    android:textColor="@color/colorBackground"
                    android:textSize="@dimen/TextSize_Spinner"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tell"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/marginTop"
                    android:layout_marginRight="@dimen/marginTop"
                    android:text="1232123"
                    android:textColor="@color/colorDetailProfile"
                    android:textSize="@dimen/TextSize_Spinner" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="12pt"
                android:layout_marginTop="@dimen/marginTopProfile">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/marginTop"
                    android:text="อาชีพ:"
                    android:textColor="@color/colorBackground"
                    android:textSize="@dimen/TextSize_Spinner"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/occupation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/marginTop"
                    android:layout_marginRight="@dimen/marginTop"
                    android:text="1232123"
                    android:textColor="@color/colorDetailProfile"
                    android:textSize="@dimen/TextSize_Spinner" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12pt">

                <Button
                    android:id="@+id/logout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/shape_button"
                    android:text="ออกจากระบบ"
                    android:textColor="@color/colorDelete"
                    android:textSize="@dimen/TextSize" />
            </LinearLayout>


        </LinearLayout>

    </ScrollView>

</LinearLayout>
