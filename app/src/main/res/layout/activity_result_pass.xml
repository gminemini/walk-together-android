<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.custu.project.walktogether.TopicsOneActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_0dp"
        android:layout_weight="9"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="12dp"
        android:layout_margin="8dp"
        android:elevation="20dp"
        android:background="@drawable/shape_mainbox"
        android:paddingRight="12dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ผลการประเมิน"
            android:textColor="@color/colorAllblack"
            android:textSize="@dimen/text_head_one"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="คุณผ่านการประเมิน"
            android:textColor="@color/colorComplete"
            android:textSize="@dimen/text_head_one"
            />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="คะแนนที่ได้ : "
                android:textColor="@color/colorComplete"
                android:textSize="@dimen/text_head_one" />

            <TextView
                android:id="@+id/result_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorComplete"
                android:textSize="@dimen/text_head_one" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/30"
                android:textColor="@color/colorComplete"
                android:textSize="@dimen/text_head_one" />

        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="สามารถทำการสมัครสมาชิกเพื่อเข้าใช้งานแอปพลิเคชัน ได้ค่ะ"
            android:textColor="@color/colorAllblack"
            android:textSize="@dimen/text_head_one"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_0dp"
        android:layout_weight="1.5"
        android:paddingLeft="12dp"
        android:paddingRight="12dp">

        <Button
            android:id="@+id/next"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@drawable/shapetopics"
            android:text="สมัครสมาชิก"
            android:textColor="@color/colorOffwhite"
            android:textSize="@dimen/TextSize" />
    </LinearLayout>
</LinearLayout>
