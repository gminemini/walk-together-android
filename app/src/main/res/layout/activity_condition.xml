<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.custu.project.walktogether.TopicsOneActivity">

    <com.baoyz.widget.PullRefreshLayout
        android:id="@+id/loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:refreshColor="@color/colorBackground"
        app:refreshType="smartisan">

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/content"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_0dp"
                android:layout_gravity="center"
                android:layout_margin="8dp"
                android:layout_weight="9"
                android:background="@drawable/shape_mainbox"
                android:elevation="20dp"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="แบบทดสอบต่อไปนี้ใช้ประเมินการทำงานของสมองและความจำ ขอให้พยายามทำให้ดีที่สุด แต่ไม่ต้องกังวลมากกเกินไป เพราะอาจส่งผลถึงความสามารถที่แท้จริง
"
                    android:textColor="@color/colorAllblack"
                    android:textSize="@dimen/text_head_three" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_0dp"
                android:layout_weight="1"
                android:paddingLeft="12dp"
                android:paddingRight="12dp">

                <CheckBox
                    android:id="@+id/check"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="ยอมรับข้อตกลงการใช้งาน"
                    android:textColor="@color/black"
                    android:textSize="@dimen/TextSize" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_0dp"
                android:layout_weight="1.5"
                android:paddingLeft="12dp"
                android:paddingRight="12dp">

                <Button
                    android:id="@+id/next"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:background="@drawable/shapetopics"
                    android:text="เริ่มทำแบบทดสอบ"
                    android:textColor="@color/colorOffwhite"
                    android:textSize="@dimen/TextSize" />
            </LinearLayout>

        </LinearLayout>


    </com.baoyz.widget.PullRefreshLayout>


</LinearLayout>
