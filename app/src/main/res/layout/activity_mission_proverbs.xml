<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_mission"
    android:orientation="vertical"
    tools:context="com.custu.project.walktogether.controller.mission.missiontwo.MissionEmotionActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"

        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="8dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="8dp"
            android:layout_weight="5"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:orientation="horizontal"
            android:background="@drawable/shape_back_progressbar">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="6dp"
                android:src="@drawable/time"/>
            <ProgressBar
                android:id="@+id/progress"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:progressDrawable="@drawable/shape_progress" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:background="@drawable/shape_lv"
            android:gravity="center">

            <TextView
                android:id="@+id/show_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lv.99"
                android:textColor="@color/colorOffwhite"
                android:textSize="@dimen/TextSize" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_0dp"
        android:layout_margin="8dp"
        android:layout_weight="9"
        android:background="@drawable/shape_mainbox"
        android:elevation="20dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
           android:layout_height="wrap_content"
            android:background="@drawable/shape_missionbox"
            android:orientation="vertical"
            android:paddingBottom="12dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:text="คำถาม"
                android:textColor="@color/colorAllblack"
                android:textSize="@dimen/TextSize" />

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:text='"	จำเป็นต้องเข้าไปเกี่ยวข้องกับเหตุการณ์ที่เกิดขึ้นเมื่อไม่มีทางเลี่ยง" '
                android:textColor="@color/colorAllblack"
                android:textSize="@dimen/TextSizeBold_20sp"
                android:textStyle="bold" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:text="เป็นความหมายของสุภาษิตในข้อใด"
                android:textColor="@color/colorAllblack"
                android:textSize="@dimen/TextSizeBold_20sp" />
            <!--<ImageView-->
                <!--android:id="@+id/image"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="match_parent"-->
                <!--android:layout_gravity="center"-->
                <!--android:background="@color/colorOffwhite"-->
                <!--android:maxHeight="200dp"-->
                <!--android:maxWidth="180dp"-->
                <!--android:src="@drawable/emotion" />-->

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_0dp"
            android:layout_weight="1.2"
            android:orientation="vertical"
            android:paddingLeft="12dp"
            android:paddingRight="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="คำตอบ"
                android:textColor="@color/colorAllblack"
                android:layout_marginBottom="@dimen/margin_btm_answer"
                android:textSize="@dimen/TextSize" />
            <LinearLayout
                android:layout_width="match_parent"
                android:paddingTop="40dp"
                android:orientation="vertical"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/margin_btm_answer">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="40dp"
                    android:elevation="20dp"
                    android:background="@drawable/shape_answer"
                    android:gravity="center"
                    android:layout_marginBottom="@dimen/margin_btm_answer"
                    android:layout_marginRight="40dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_head_three"
                        android:textColor="@color/colorBackground"
                        android:background="@color/colorOffwhite"
                        android:text="น้ำขึ้นให้รีบตัก"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="40dp"
                    android:elevation="20dp"
                    android:background="@drawable/shape_answer"
                    android:gravity="center"
                    android:layout_marginBottom="@dimen/margin_btm_answer"
                    android:layout_marginRight="40dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_head_three"
                        android:textColor="@color/colorBackground"
                        android:background="@color/colorOffwhite"
                        android:text="เห็นช้างขี้ ขี้ตามช้าง"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="40dp"
                    android:elevation="20dp"
                    android:background="@drawable/shape_answer"
                    android:gravity="center"
                    android:layout_marginRight="40dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_head_three"
                        android:textColor="@color/colorBackground"
                        android:background="@color/colorOffwhite"
                        android:text="ตกกะไดพลอยโจน"/>
                </LinearLayout>
            </LinearLayout>






        </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_0dp"
        android:layout_weight="1.2"
        android:paddingBottom="8dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="8dp">

        <Button
            android:id="@+id/next"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/shapetopics"
            android:text="ยืนยัน"
            android:textColor="@color/colorOffwhite"
            android:textSize="@dimen/TextSize" />
    </LinearLayout>
</LinearLayout>
