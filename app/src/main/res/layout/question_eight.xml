<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@color/colorOffwhite"
    android:orientation="vertical"
    tools:context="com.custu.project.walktogether.TopicsOneActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_0dp"
        android:layout_margin="8dp"
        android:layout_weight="9"
        android:background="@drawable/shape_mainbox"
        android:elevation="20dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingLeft="12dp"
        android:paddingRight="12dp">

        <ProgressBar
            android:id="@+id/progress"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:backgroundTint="@color/colorBgProgress"
            android:progress="50"
            android:progressBackgroundTint="@color/colorBackground"
            android:progressDrawable="@drawable/progressbar" />

        <!--<LinearLayout-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_alignParentTop="true"-->
            <!--android:layout_centerHorizontal="true"-->
            <!--android:layout_marginTop="8dp"-->
            <!--android:background="@drawable/bgtime"-->
            <!--android:gravity="center"-->
            <!--android:padding="20dp">-->

            <!--<TextView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_margin="12dp"-->
                <!--android:text="เหลือเวลา 19 วินาที"-->
                <!--android:textColor="@color/colorOffwhite"-->
                <!--android:textSize="18sp"-->
                <!--android:textStyle="bold" />-->
        <!--</LinearLayout>-->


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/progressbar"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingLeft="12dp"
            android:paddingRight="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:text="คำถาม"
                android:textColor="@color/colorAllblack"
                android:textSize="@dimen/TextSize" />

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:textColor="@color/colorAllblack"
                android:textSize="@dimen/TextSizeBold_20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:textColor="@color/colorAllblack"
                android:textSize="@dimen/TextSizeBold_20sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="4dp"
                android:text="คำตอบ"
                android:textColor="@color/colorAllblack"
                android:textSize="@dimen/TextSize" />
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="12dp"
            android:paddingBottom="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_edittext_40dp"

                    android:layout_marginTop="@dimen/margin_edittext_4dp"
                    android:paddingLeft="@dimen/paddingLeft"
                    android:paddingTop="12dp"
                    android:text="1. วันอาทิตย์"
                    android:textColor="@color/colorAllblack"
                    android:textSize="@dimen/TextSize" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_edittext_40dp"

                    android:layout_marginTop="@dimen/margin_edittext_4dp"
                    android:paddingLeft="@dimen/paddingLeft"

                    android:text="2. วันเสาร์"
                    android:textColor="@color/colorAllblack"
                    android:textSize="@dimen/TextSize" />

                <Spinner
                    android:id="@+id/answer_day_one"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_edittext_40dp"
                    android:layout_marginBottom="@dimen/margin_edittext_4dp"
                    android:background="@drawable/shape_edittext"
                    android:spinnerMode="dropdown">

                </Spinner>

                <Spinner
                    android:id="@+id/answer_day_two"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_edittext_40dp"
                    android:layout_marginBottom="@dimen/margin_edittext_4dp"
                    android:layout_marginTop="@dimen/margin_edittext_4dp"
                    android:background="@drawable/shape_edittext"
                    android:spinnerMode="dropdown">

                </Spinner>

                <Spinner
                    android:id="@+id/answer_day_three"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_edittext_40dp"
                    android:layout_marginBottom="@dimen/margin_edittext_4dp"
                    android:layout_marginTop="@dimen/margin_edittext_4dp"
                    android:background="@drawable/shape_edittext"

                    android:spinnerMode="dropdown">

                </Spinner>

                <Spinner
                    android:id="@+id/answer_day_four"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_edittext_40dp"
                    android:layout_marginBottom="@dimen/margin_edittext_4dp"
                    android:layout_marginTop="@dimen/margin_edittext_4dp"
                    android:background="@drawable/shape_edittext"
                    android:spinnerMode="dropdown">

                </Spinner>

                <Spinner
                    android:id="@+id/answer_day_five"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_edittext_40dp"
                    android:layout_marginBottom="@dimen/margin_edittext_4dp"
                    android:layout_marginTop="@dimen/margin_edittext_4dp"
                    android:background="@drawable/shape_edittext"
                    android:spinnerMode="dropdown">

                </Spinner>

            </LinearLayout>
        </ScrollView>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_0dp"
        android:layout_weight="1.2"
        android:padding="8dp">

        <Button
            android:id="@+id/next"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/shapetopics"
            android:text="ถัดไป"
            android:textColor="@color/colorOffwhite"
            android:textSize="@dimen/TextSize" />
    </LinearLayout>
</LinearLayout>
