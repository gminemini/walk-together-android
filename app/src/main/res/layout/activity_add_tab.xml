<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.custu.project.walktogether.AddTabActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.design.widget.AppBarLayout
            app:elevation="0dp"
            android:id="@+id/app_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <android.support.design.widget.TabLayout
                android:id="@+id/tabs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorBackground"
                app:tabIndicatorColor="@color/colorOffwhite"
                app:tabSelectedTextColor="@color/colorOffwhite"
                app:tabTextColor="@color/colorOffwhite">

                <android.support.design.widget.TabItem
                    android:id="@+id/tab_numbefr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="เพิ่มหมายเลข" />

                <android.support.design.widget.TabItem
                    android:id="@+id/tab_qr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="QR CODE" />


            </android.support.design.widget.TabLayout>

        </android.support.design.widget.AppBarLayout>

        <android.support.v4.view.ViewPager
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/app_bar"
            app:layout_behavior="@string/appbar_scrolling_view_behavior" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
