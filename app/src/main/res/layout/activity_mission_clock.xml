<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_mission"
    android:orientation="vertical"
    tools:context="com.custu.project.walktogether.controller.mission.missiontwo.MissionBoxActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"

        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="8dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="8dp"
            android:layout_weight="5"
            android:background="@drawable/shape_back_progressbar"
            android:orientation="horizontal"
            android:paddingLeft="6dp"
            android:paddingRight="6dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="6dp"
                android:src="@drawable/time" />

            <ProgressBar
                android:id="@+id/progress"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:progressDrawable="@drawable/shape_progress" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:background="@drawable/shape_lv"
            android:gravity="center">

            <TextView
                android:id="@+id/show_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lv.99"
                android:textColor="@color/colorOffwhite"
                android:textSize="@dimen/TextSize" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_0dp"
        android:layout_margin="8dp"
        android:layout_weight="9"
        android:background="@drawable/shape_mainbox"
        android:elevation="20dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_0dp"
            android:layout_weight="2.5"
            android:background="@drawable/shape_missionbox"
            android:orientation="vertical"
            android:paddingBottom="12dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:text="คำถาม"
                android:textColor="@color/colorAllblack"
                android:textSize="@dimen/TextSize" />

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:text="จากภาพมีกล่องทั้งหมดกี่ใบ ?"
                android:textColor="@color/colorAllblack"
                android:textSize="@dimen/TextSizeBold_20sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@color/colorOffwhite"
                android:maxHeight="200dp"
                android:maxWidth="180dp"
                android:src="@drawable/clock" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_0dp"
            android:layout_weight="1.2"
            android:orientation="vertical"
            android:paddingLeft="12dp"
            android:paddingRight="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="คำตอบ"
                android:textColor="@color/colorAllblack"
                android:textSize="@dimen/TextSize" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_edittext_40dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="@dimen/height_0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="8dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <Spinner
                        android:id="@+id/input_hour"
                        android:layout_width="@dimen/height_0dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="4dp"
                        android:layout_weight="1"
                        android:background="@drawable/shape_edittext"
                        android:hint="@string/pleaseinput"
                        android:spinnerMode="dialog">
                    </Spinner>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ชั่วโมง"
                        android:textColor="@color/colorAllblack"
                        android:textSize="@dimen/TextSizeBold_20sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="@dimen/height_0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <Spinner
                        android:id="@+id/input_minus"
                        android:layout_width="@dimen/height_0dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="4dp"
                        android:layout_weight="1"
                        android:background="@drawable/shape_edittext"
                        android:hint="@string/pleaseinput"
                        android:spinnerMode="dialog">
                    </Spinner>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="นาที"
                        android:textColor="@color/colorAllblack"
                        android:textSize="@dimen/TextSizeBold_20sp"
                        android:textStyle="bold" />
                </LinearLayout>

            </LinearLayout>


        </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_0dp"
        android:layout_weight="1.2"
        android:paddingBottom="8dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="8dp">

        <Button
            android:id="@+id/next"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/shapetopics"
            android:text="ยืนยัน"
            android:textColor="@color/colorOffwhite"
            android:textSize="@dimen/TextSize" />
    </LinearLayout>
</LinearLayout>
